using mk;

nonfix fresh;
infixr 10 in;
def fresh (v:[]) in body = callfresh (__lambda__ [v] body);
def fresh (v:vs) in body = callfresh (__lambda__ [v] (fresh vs in body));

infixr 10 <?;
def n <? goal = rungoal n goal;

